---
import profileData from '../data/profile.json';

const { hero } = profileData;
const techStack = ['React', 'TypeScript', 'Next.js', 'Tailwind CSS', 'Python'];
---

<section id="home" class="min-h-[90vh] flex items-center justify-center px-6 py-20 relative overflow-hidden bg-neutral-50">
  <!-- Background decoration -->
  <div class="absolute inset-0 z-0">
    <div class="absolute top-[-10%] right-[-5%] w-[500px] h-[500px] bg-neutral-200/50 rounded-full blur-3xl opacity-30"></div>
    <div class="absolute bottom-[-10%] left-[-5%] w-[500px] h-[500px] bg-neutral-300/30 rounded-full blur-3xl opacity-30"></div>
  </div>

  <div class="max-w-4xl mx-auto text-center relative z-10">
    <p class="text-neutral-500 font-medium tracking-[0.2em] mb-6 uppercase text-sm animate-slide-up opacity-0" style="animation-delay: 0s; animation-fill-mode: forwards;">
      {hero.welcomeText}
    </p>

    <h2 class="text-5xl md:text-7xl font-bold text-neutral-900 mb-8 tracking-tight leading-tight animate-slide-up opacity-0" style="animation-delay: 0.1s; animation-fill-mode: forwards;">
      Creating Digital <br class="hidden md:block" />
      <span class="text-neutral-400">Experiences</span>
    </h2>

    <p class="text-neutral-600 mb-12 max-w-2xl mx-auto text-lg leading-relaxed animate-slide-up opacity-0" style="animation-delay: 0.2s; animation-fill-mode: forwards;">
      {hero.description}
    </p>

    <div class="flex flex-wrap justify-center gap-3 mb-12 animate-slide-up opacity-0" style="animation-delay: 0.3s; animation-fill-mode: forwards;">
      {techStack.map((tech) => (
        <span class="tech-tag">{tech}</span>
      ))}
    </div>

    <div class="animate-slide-up opacity-0" style="animation-delay: 0.4s; animation-fill-mode: forwards;">
      <a href="#projects" class="btn-primary">
        プロジェクトを見る
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  </div>
</section>
