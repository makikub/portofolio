---
import socialData from '../data/social.json';
import profileData from '../data/profile.json';

const { hero } = profileData;
const descriptionLines = hero.description.split('\n');
---

<section id="home" class="min-h-[85vh] flex items-center justify-center bg-beige-50 pt-20 pb-16">
  <div class="container mx-auto px-4">
    <div class="text-center max-w-3xl mx-auto">
      <!-- Welcome Text -->
      <p class="text-secondary text-sm md:text-base mb-6 tracking-wide uppercase">
        {hero.welcomeText}
      </p>

      <!-- Main Title -->
      <h1 class="text-5xl md:text-7xl font-bold mb-8 tracking-tight text-primary">
        {hero.title}
      </h1>

      <!-- Description -->
      <p class="text-lg md:text-xl text-secondary mb-12 leading-relaxed max-w-2xl mx-auto">
        {descriptionLines.map((line, index) => (
          <>
            {line}
            {index < descriptionLines.length - 1 && <br class="hidden md:block" />}
          </>
        ))}
      </p>

      <!-- Social Links -->
      <div class="flex items-center justify-center gap-6 mb-12">
        {socialData.links.map((social) => (
          <a 
            href={social.url}
            target="_blank"
            rel="noopener noreferrer"
            class="text-secondary hover:text-primary transition-colors"
            aria-label={social.name}
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d={social.icon} />
            </svg>
          </a>
        ))}
      </div>
    </div>
  </div>
</section>

