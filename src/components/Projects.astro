---
import projectsData from '../data/projects.json';
---

<section id="projects" class="py-24 px-6 bg-neutral-50">
  <div class="max-w-6xl mx-auto">
    <div class="mb-20">
      <div class="flex flex-col md:flex-row md:items-end justify-between gap-6 animate-on-scroll">
        <div>
          <h2 class="text-4xl font-bold text-neutral-900 mb-4 tracking-tight">Featured Projects</h2>
          <p class="text-neutral-500 max-w-xl text-lg leading-relaxed">
            実際に開発したアプリケーションの一部です。<br class="hidden md:block" />
            各プロジェクトで使用した技術スタックと解決した課題をご覧いただけます。
          </p>
        </div>

        <a
          href="https://github.com"
          target="_blank"
          rel="noopener noreferrer"
          class="hidden md:flex items-center gap-2 text-neutral-900 font-medium hover:text-neutral-600 transition-colors whitespace-nowrap"
        >
          View GitHub
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 17L17 7M17 7H7M17 7V17" />
          </svg>
        </a>
      </div>
    </div>

    <div class="grid gap-12">
      {projectsData.projects.map((project) => (
        <div
          class="group relative bg-white rounded-3xl overflow-hidden border border-neutral-200 hover:shadow-2xl hover:shadow-neutral-200/50 transition-all duration-500 animate-on-scroll"
        >
          <div class="grid md:grid-cols-2 gap-0">
            <div class="relative overflow-hidden aspect-video md:aspect-auto md:min-h-[320px]">
              <div class="absolute inset-0 bg-neutral-900/5 group-hover:bg-transparent transition-colors duration-500 z-10"></div>
              {project.image ? (
                <img
                  src={project.image}
                  alt={project.title}
                  class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700"
                  loading="lazy"
                />
              ) : (
                <div class="w-full h-full bg-neutral-100 flex items-center justify-center">
                  <svg class="w-16 h-16 text-neutral-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
              )}
            </div>

            <div class="p-8 md:p-12 flex flex-col justify-between">
              <div>
                <div class="flex items-center justify-between mb-6">
                  <span class="text-xs font-bold tracking-wider uppercase text-neutral-500 border border-neutral-200 px-3 py-1 rounded-full">
                    Web Application
                  </span>
                  <div class="flex gap-3">
                    {project.githubUrl && (
                      <a href={project.githubUrl} target="_blank" rel="noopener noreferrer" class="p-2 text-neutral-400 hover:text-neutral-900 transition-colors">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
                        </svg>
                      </a>
                    )}
                    {project.liveUrl && (
                      <a href={project.liveUrl} target="_blank" rel="noopener noreferrer" class="p-2 text-neutral-400 hover:text-neutral-900 transition-colors">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                        </svg>
                      </a>
                    )}
                  </div>
                </div>

                <h3 class="text-2xl font-bold text-neutral-900 mb-4 group-hover:text-neutral-700 transition-colors">
                  {project.title}
                </h3>
                <p class="text-neutral-600 leading-relaxed mb-8">
                  {project.description}
                </p>
              </div>

              <div>
                <p class="text-xs font-semibold text-neutral-400 uppercase tracking-wider mb-4">Technologies Used</p>
                <div class="flex flex-wrap gap-2">
                  {project.technologies.slice(0, 6).map((tech) => (
                    <span class="px-3 py-1 bg-neutral-100 text-neutral-600 text-sm font-medium rounded-md border border-neutral-200">
                      {tech}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
