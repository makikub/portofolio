---
import socialData from '../data/social.json';

const currentYear = new Date().getFullYear();

const navLinks = [
  { name: 'ブログ', href: '#blog' },
  { name: '自己紹介', href: '#about' },
];
---

<footer class="border-t border-beige-300 bg-beige-50 py-12">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-8">
      <!-- Links Section -->
      <div>
        <h3 class="text-sm font-semibold text-primary mb-3 tracking-wide uppercase">Links</h3>
        <ul class="space-y-2">
          {navLinks.map((link) => (
            <li>
              <a 
                href={link.href}
                class="text-secondary hover:text-primary transition-colors text-sm"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Social Links Section -->
      <div>
        <h3 class="text-sm font-semibold text-primary mb-3 tracking-wide uppercase">Socials</h3>
        <div class="flex items-center gap-4">
          {socialData.links.map((social) => (
            <a
              href={social.url}
              target="_blank"
              rel="noopener noreferrer"
              class="text-secondary hover:text-primary transition-colors"
              aria-label={social.name}
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d={social.icon} />
              </svg>
            </a>
          ))}
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-12 pt-8 border-t border-beige-300 text-center">
      <p class="text-sm text-secondary">
        © {currentYear} <a href="https://github.com/yourusername" target="_blank" rel="noopener noreferrer" class="hover:text-primary transition-colors">Source code available on GitHub</a>
      </p>
    </div>
  </div>
</footer>

