---
interface Props {
  project: {
    id: number;
    title: string;
    description: string;
    challenge: string;
    result: string;
    technologies: string[];
    image: string;
    liveUrl?: string;
    githubUrl?: string;
    duration: string;
    role: string;
  };
}

const { project } = Astro.props;
---

<div class="card group">
  <!-- Image -->
  <div class="relative h-64 overflow-hidden bg-gray-200">
    <img 
      src={project.image} 
      alt={project.title}
      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
      onerror="this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 24 24%22 fill=%22%23999%22%3E%3Cpath d=%22M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z%22/%3E%3C/svg%3E'"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
    </div>
  </div>

  <!-- Content -->
  <div class="p-6">
    <!-- Title -->
    <h3 class="text-2xl font-bold text-gray-900 mb-3">
      {project.title}
    </h3>

    <!-- Description -->
    <p class="text-gray-600 mb-4 leading-relaxed">
      {project.description}
    </p>

    <!-- Challenge Section -->
    <div class="mb-4 p-4 bg-amber-50 border-l-4 border-amber-400 rounded">
      <h4 class="text-sm font-bold text-amber-900 mb-2 flex items-center">
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd" />
        </svg>
        Ëß£Ê±∫„Åó„ÅüË™≤È°å
      </h4>
      <p class="text-sm text-gray-700 leading-relaxed">
        {project.challenge}
      </p>
    </div>

    <!-- Result -->
    <div class="mb-4 p-3 bg-green-50 rounded">
      <p class="text-sm text-green-800 font-medium flex items-center">
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
        {project.result}
      </p>
    </div>

    <!-- Technologies -->
    <div class="mb-4">
      <h4 class="text-sm font-bold text-gray-700 mb-2">‰ΩøÁî®ÊäÄË°ì</h4>
      <div class="flex flex-wrap gap-2">
        {project.technologies.map((tech) => (
          <span class="px-3 py-1 bg-primary/10 text-primary text-sm font-medium rounded-full">
            {tech}
          </span>
        ))}
      </div>
    </div>

    <!-- Meta Info -->
    <div class="flex items-center justify-between text-sm text-gray-500 mb-4 pt-4 border-t border-gray-100">
      <span>‚è±Ô∏è {project.duration}</span>
      <span>üë§ {project.role}</span>
    </div>

    <!-- Links -->
    <div class="flex gap-3">
      {project.liveUrl && (
        <a 
          href={project.liveUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="flex-1 inline-flex items-center justify-center px-4 py-2 bg-accent text-white font-medium rounded-lg hover:bg-accent/90 transition-colors"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
          „Éá„É¢„ÇíË¶ã„Çã
        </a>
      )}
      {project.githubUrl && (
        <a 
          href={project.githubUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="flex-1 inline-flex items-center justify-center px-4 py-2 bg-gray-800 text-white font-medium rounded-lg hover:bg-gray-700 transition-colors"
        >
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
          </svg>
          GitHub
        </a>
      )}
    </div>
  </div>
</div>

