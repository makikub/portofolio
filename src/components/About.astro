---
import profileData from '../data/profile.json';

const { about } = profileData;
---

<section id="about" class="section bg-white border-t border-beige-300">
  <div class="container">
    <div class="mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-primary">
        {about.title}
      </h2>
    </div>

    <div class="max-w-3xl">
      <div class="prose prose-lg">
        {about.paragraphs.map((paragraph, index) => (
          <p class={`text-secondary leading-relaxed ${index < about.paragraphs.length - 1 ? 'mb-6' : 'mb-8'}`}>
            {paragraph}
          </p>
        ))}

        <!-- CTA -->
        <div class="pt-4">
          <a 
            href={about.ctaLink}
            class="inline-flex items-center text-primary hover:text-primary-light font-medium transition-colors link-underline"
          >
            {about.ctaText}
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

