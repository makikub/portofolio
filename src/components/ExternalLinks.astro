---
import externalLinks from '../data/external_links.json';

const icons: Record<string, string> = {
  zenn: 'M3.5 2C2.67 2 2 2.67 2 3.5v17c0 .83.67 1.5 1.5 1.5h17c.83 0 1.5-.67 1.5-1.5v-17c0-.83-.67-1.5-1.5-1.5h-17zm11.58 4.5l-4.95 12h2.87l4.95-12h-2.87zm-5.66 0l-4.95 12h2.87l4.95-12H9.42z',
  wantedly: 'M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 14.5v-9l6 4.5-6 4.5z',
  findy: 'M13 2L3 14h9l-1 8 10-12h-9l1-8z'
};
---

<section id="external-links" class="py-24 px-6 bg-neutral-900 text-white relative overflow-hidden">
  <!-- Background Decorations -->
  <div class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none opacity-20">
    <div class="absolute -top-[10%] -left-[10%] w-[40%] h-[40%] bg-blue-500 rounded-full blur-[120px]"></div>
    <div class="absolute -bottom-[10%] -right-[10%] w-[40%] h-[40%] bg-emerald-500 rounded-full blur-[120px]"></div>
  </div>

  <div class="max-w-6xl mx-auto relative z-10">
    <div class="mb-16 text-center md:text-left">
      <h2 class="text-4xl font-bold mb-4 tracking-tight">External Articles & Profiles</h2>
      <p class="text-neutral-400 max-w-2xl text-lg leading-relaxed">
        技術記事やキャリア、活用しているツールなど、外部プラットフォームで発信している情報をまとめています。
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl">
      {externalLinks.platforms.map((platform) => (
        <a
          href={platform.url}
          target="_blank"
          rel="noopener noreferrer"
          class="group relative p-8 bg-neutral-800/50 backdrop-blur-sm rounded-3xl border border-neutral-700/50 hover:border-white/20 hover:bg-neutral-800 transition-all duration-500 flex flex-col h-full animate-on-scroll"
        >
          <div 
            class="w-14 h-14 rounded-2xl flex items-center justify-center mb-8 group-hover:scale-110 transition-transform duration-500 shadow-lg"
            style={`background-color: ${platform.color}15; border: 1px solid ${platform.color}30;`}
          >
            <svg 
              class="w-7 h-7" 
              viewBox="0 0 24 24" 
              fill="currentColor"
              style={`color: ${platform.name === 'Findy Tools' ? '#fff' : platform.color}`}
            >
              <path d={icons[platform.icon] || 'M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2z'} />
            </svg>
          </div>

          <h3 class="text-2xl font-bold mb-3 flex items-center gap-2">
            {platform.name}
            <svg class="w-4 h-4 opacity-0 group-hover:opacity-100 -translate-x-2 group-hover:translate-x-0 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </h3>
          
          <p class="text-neutral-400 leading-relaxed mb-8 flex-grow">
            {platform.description}
          </p>

          <div class="flex items-center text-sm font-semibold tracking-wider uppercase opacity-60 group-hover:opacity-100 transition-opacity">
            View on {platform.name}
          </div>

          <!-- Hover Gradient -->
          <div 
            class="absolute inset-0 rounded-3xl opacity-0 group-hover:opacity-5 transition-opacity duration-500 pointer-events-none"
            style={`background: radial-gradient(600px circle at var(--mouse-x, 50%) var(--mouse-y, 50%), ${platform.color}, transparent 40%);`}
          ></div>
        </a>
      ))}
    </div>
  </div>
</section>

<script>
  // Simple mouse tracking for the radial gradient effect
  const cards = document.querySelectorAll('#external-links a');
  cards.forEach(card => {
    (card as HTMLElement).onmousemove = e => {
      const rect = card.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;
      (card as HTMLElement).style.setProperty('--mouse-x', `${x}px`);
      (card as HTMLElement).style.setProperty('--mouse-y', `${y}px`);
    };
  });
</script>
