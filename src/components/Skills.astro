  'users': 'M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2M9 7a4 4 0 1 0 0-8 4 4 0 0 0 0 8zM23 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75',
  'layout': 'M4 3h16a1 1 0 0 1 1 1v16a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V4a1 1 0 0 1 1-1zM3 9h18M9 21V9',
  'server': 'M2 5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v4a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5zM2 15a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v4a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2v-4zM6 7h.01M6 17h.01',
  'cloud': 'M18 10h-1.26A8 8 0 1 0 9 20h9a5 5 0 0 0 0-10z',
  'palette': 'M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10c.93 0 1.6-.69 1.6-1.6 0-.42-.16-.8-.42-1.08-.28-.3-.42-.66-.42-1.08 0-.93.69-1.6 1.6-1.6H16c3.3 0 6-2.7 6-6 0-5.5-4.5-10-10-10zM6.5 12a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zM9.5 8a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zM14.5 8a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zM17.5 12a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3z',
};
---

<section id="skills" class="py-24 px-6 bg-white relative">
  <div class="max-w-6xl mx-auto">
    <div class="mb-20">
      <div class="flex flex-col md:flex-row md:items-end justify-between gap-6 animate-on-scroll">
        <div>
          <h2 class="text-4xl font-bold text-neutral-900 mb-4 tracking-tight">Skills & Expertise</h2>
          <p class="text-neutral-500 max-w-xl text-lg leading-relaxed">
            エンジニアリングマネージャーとしての組織作りから、<br class="hidden md:block" />
            フルスタック開発まで幅広い領域をカバーします。
          </p>
        </div>
        <div class="hidden md:block h-px bg-neutral-200 flex-1 ml-12 mb-4"></div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {skillsData.categories.map((category) => (
        <div
          class="group p-8 bg-neutral-50 rounded-2xl border border-neutral-100 hover:border-neutral-200 hover:shadow-xl hover:shadow-neutral-100/50 transition-all duration-300 animate-on-scroll"
        >
          <div class="w-12 h-12 bg-white rounded-xl border border-neutral-100 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300 shadow-sm">
            <svg class="w-6 h-6 text-neutral-900" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d={categoryIcons[category.icon] || categoryIcons['layout']} />
            </svg>
          </div>

          <h3 class="text-xl font-bold text-neutral-900 mb-2">{category.name}</h3>
          <p class="text-neutral-500 text-sm mb-6">{category.description}</p>

          <div class="flex flex-wrap gap-2">
            {category.skills.map((skill) => (
              <span class="skill-tag group-hover:border-neutral-300 transition-colors">
                {skill}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
