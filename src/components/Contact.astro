---
import socialData from '../data/social.json';
---

<section id="contact" class="py-24 px-6 bg-white relative overflow-hidden">
  <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-neutral-200 to-transparent"></div>

  <div class="max-w-4xl mx-auto relative z-10">
    <div class="text-center mb-16 animate-on-scroll">
      <h2 class="text-4xl font-bold text-neutral-900 mb-6 tracking-tight">Get in Touch</h2>
      <p class="text-neutral-500 max-w-xl mx-auto text-lg">
        プロジェクトのご相談や、お仕事のご依頼など、<br class="hidden md:block" />
        お気軽にお問い合わせください。
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-12 lg:gap-20">
      <div class="animate-on-scroll">
        <h3 class="text-xl font-bold text-neutral-900 mb-8">Contact Info</h3>
        <div class="space-y-4">
          <a
            href={`mailto:${socialData.email}`}
            class="group flex items-start gap-4 p-4 -ml-4 rounded-xl hover:bg-neutral-50 transition-colors"
          >
            <div class="p-3 bg-neutral-100 rounded-lg group-hover:bg-white group-hover:shadow-sm transition-all">
              <svg class="w-6 h-6 text-neutral-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <p class="text-neutral-900 font-medium mb-1">Email</p>
              <p class="text-neutral-500 text-sm">{socialData.email}</p>
            </div>
          </a>

          {socialData.links.slice(0, 2).map((social) => (
            <a
              href={social.url}
              target="_blank"
              rel="noopener noreferrer"
              class="group flex items-start gap-4 p-4 -ml-4 rounded-xl hover:bg-neutral-50 transition-colors"
            >
              <div class="p-3 bg-neutral-100 rounded-lg group-hover:bg-white group-hover:shadow-sm transition-all">
                <svg class="w-6 h-6 text-neutral-600" fill="currentColor" viewBox="0 0 24 24">
                  <path d={social.icon} />
                </svg>
              </div>
              <div>
                <p class="text-neutral-900 font-medium mb-1">{social.name}</p>
                <p class="text-neutral-500 text-sm">{social.url.replace('https://', '').split('/')[0]}</p>
              </div>
            </a>
          ))}
        </div>
      </div>

      <div class="animate-on-scroll">
        <form class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-medium text-neutral-700 mb-2">
              お名前
            </label>
            <input
              type="text"
              id="name"
              name="name"
              class="w-full px-4 py-3 bg-neutral-50 border border-neutral-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:bg-white transition-all"
              placeholder="山田太郎"
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-neutral-700 mb-2">
              メールアドレス
            </label>
            <input
              type="email"
              id="email"
              name="email"
              class="w-full px-4 py-3 bg-neutral-50 border border-neutral-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:bg-white transition-all"
              placeholder="example@email.com"
            />
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-neutral-700 mb-2">
              メッセージ
            </label>
            <textarea
              id="message"
              name="message"
              rows="4"
              class="w-full px-4 py-3 bg-neutral-50 border border-neutral-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:bg-white transition-all resize-none"
              placeholder="お問い合わせ内容をご記入ください"
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full flex items-center justify-center gap-2 px-8 py-4 bg-neutral-900 text-white font-medium rounded-lg hover:bg-neutral-800 transition-all hover:shadow-lg active:scale-95"
          >
            送信する
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </button>
        </form>
      </div>
    </div>
  </div>
</section>
