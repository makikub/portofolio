---
import socialData from '../data/social.json';

const navItems = [
  { name: 'ホーム', href: '#home' },
  { name: 'スキル', href: '#skills' },
  { name: 'プロジェクト', href: '#projects' },
  { name: 'お問い合わせ', href: '#contact' },
];
---

<header class="sticky top-0 bg-white/80 backdrop-blur-md border-b border-neutral-200 z-50">
  <nav class="max-w-6xl mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="text-neutral-900 font-semibold text-xl hover:text-neutral-600 transition-colors">
        Portfolio
      </a>

      <!-- Desktop Navigation -->
      <ul class="hidden md:flex items-center gap-8">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class="text-neutral-600 hover:text-neutral-900 transition-colors"
            >
              {item.name}
            </a>
          </li>
        ))}
      </ul>

      <!-- Social Links -->
      <div class="hidden md:flex items-center gap-4">
        {socialData.links.slice(0, 3).map((social) => (
          <a
            href={social.url}
            target="_blank"
            rel="noopener noreferrer"
            class="text-neutral-500 hover:text-neutral-900 transition-colors"
            aria-label={social.name}
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d={social.icon} />
            </svg>
          </a>
        ))}
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 -mr-2 text-neutral-900 hover:text-neutral-600 transition-colors"
        aria-label="メニュー"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pt-4 border-t border-neutral-200 mt-4">
      <ul class="flex flex-col gap-3">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class="block text-neutral-600 hover:text-neutral-900 transition-colors py-2"
            >
              {item.name}
            </a>
          </li>
        ))}
      </ul>
      <div class="flex items-center gap-4 pt-4 mt-4 border-t border-neutral-200">
        {socialData.links.slice(0, 3).map((social) => (
          <a
            href={social.url}
            target="_blank"
            rel="noopener noreferrer"
            class="text-neutral-500 hover:text-neutral-900 transition-colors"
            aria-label={social.name}
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d={social.icon} />
            </svg>
          </a>
        ))}
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking on a link
  const mobileMenuLinks = mobileMenu?.querySelectorAll('a');
  mobileMenuLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>
